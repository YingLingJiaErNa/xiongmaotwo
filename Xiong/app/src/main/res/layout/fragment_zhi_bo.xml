<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiong.fragment.ZhiBoFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <ImageView
            android:id="@+id/xmzb_zb_st"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y650" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="【正在直播】"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/xmzb_zb_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxxx"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/x400"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:text="简介" />

            <CheckBox
                android:id="@+id/xmzb_zb_sx"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x70"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:button="@null"
                android:checked="true"
                android:gravity="center_horizontal" />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/xmzb_xy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x25"
                android:text="xxxx"
                android:textColor="#000"
                android:visibility="gone" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:orientation="vertical">


                <android.support.design.widget.TabLayout
                    android:id="@+id/zblive_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ></android.support.design.widget.TabLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/zblive_pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y700">
                </android.support.v4.view.ViewPager>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
